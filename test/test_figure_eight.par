# Test for a figure-eight orbit (possible up to 2PN)

# -------------------------------------------------------------------------------------------------
# General parameters
# -------------------------------------------------------------------------------------------------
num_dim			= 3				# Number of dimensions
num_bodies 		= 3				# Number of bodies
0pn_terms		= 1				# Whether to include 0PN (Newtonian) terms
1pn_terms		= 1				# Whether to include 1PN terms
2pn_terms		= 1				# Whether to include 2PN terms
2.5pn_terms		= 0				# Whether to include 2.5PN terms


# -------------------------------------------------------------------------------------------------
# Time parameters
# -------------------------------------------------------------------------------------------------
t_end			= 5000.0			# Final time
dt			= 0.1				# Timestep


# -------------------------------------------------------------------------------------------------
# ODE integrator
# -------------------------------------------------------------------------------------------------
ode_integrator		= implicit-midpoint		# ODE integration method
tol	        	= 1e-11				# Error tolerance for the IMP method


# -------------------------------------------------------------------------------------------------
# Initial conditions
# -------------------------------------------------------------------------------------------------
ic_preset 		= figure_eight			# Initial condition preset
mass1			= 1.0				# Mass of body 1
mass2			= 1.0				# Mass of body 2
mass3			= 1.0				# Mass of body 3
figure_eight_width	= 150.0				# Figure-eight width


# -------------------------------------------------------------------------------------------------
# Output parameters
# -------------------------------------------------------------------------------------------------
dt_save			= 1.0				# Output times

