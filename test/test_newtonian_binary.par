# Test for a Newtonian binary


# -------------------------------------------------------------------------------------------------
# General parameters
# -------------------------------------------------------------------------------------------------
num_dim			= 3				# Number of dimensions
num_bodies 		= 2				# Number of bodies
0pn_terms		= 1				# Whether to include 0PN (Newtonian) terms
1pn_terms		= 0				# Whether to include 1PN terms
2pn_terms		= 0				# Whether to include 2PN terms
2.5pn_terms		= 0				# Whether to include 2.5PN terms


# -------------------------------------------------------------------------------------------------
# Time parameters
# -------------------------------------------------------------------------------------------------
t_end			= 7000.0			# Final time
dt			= 0.1				# Timestep


# -------------------------------------------------------------------------------------------------
# ODE integrator
# -------------------------------------------------------------------------------------------------
ode_integrator		= rk4				# ODE integration method


# -------------------------------------------------------------------------------------------------
# Initial conditions
# -------------------------------------------------------------------------------------------------
ic_preset 		= newtonian_binary		# Initial condition preset
mass1			= 0.5				# Mass of body 1
mass2			= 1.5				# Mass of body 2
binary_a		= 30.0				# Semi-major axis of binary
binary_b 		= 20.0				# Semi-minor axis of binary
binary_phi0 		= 0.4				# Initial phase of binary


# -------------------------------------------------------------------------------------------------
# Output parameters
# -------------------------------------------------------------------------------------------------
dt_save			= 1.0				# Output times

