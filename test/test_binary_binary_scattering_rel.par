# Test for a relativistic binary-binary scattering with all terms up to 2.5 PN order
# (also includes the expensive computation of UTT4, use include_utt4 = 0 to turn it off)

# -------------------------------------------------------------------------------------------------
# General parameters
# -------------------------------------------------------------------------------------------------
num_dim			= 3				# Number of dimensions
num_bodies 		= 4				# Number of bodies
0pn_terms		= 1				# Whether to include 0PN (Newtonian) terms
1pn_terms		= 1				# Whether to include 1PN terms
2pn_terms		= 1				# Whether to include 2PN terms
2.5pn_terms		= 0				# Whether to include 2.5PN terms


# -------------------------------------------------------------------------------------------------
# Time parameters
# -------------------------------------------------------------------------------------------------
t_end			= 2500.0			# Final time
dt			= 1.0				# Timestep


# -------------------------------------------------------------------------------------------------
# ODE integrator
# -------------------------------------------------------------------------------------------------
ode_integrator		= cash-karp			# ODE integration method
rtol	        	= 1e-14				# Error tolerance for the Cash-Karp method
impulse_method		= 1				# Whether to use the impulse-method
impulse_method_n	= 1				# Number of substeps for the impulse method

include_utt4		= 1				# Whether to include UTT4
utt4_epsrel 		= 1e-3				# Relative error tolerance for integral
utt4_maxeval 		= 1e7				# Maximum number of integrand evaluations


# -------------------------------------------------------------------------------------------------
# Initial conditions
# -------------------------------------------------------------------------------------------------
mass1			= 0.25
mass2			= 0.25
mass3			= 0.25
mass4			= 0.25

pos1			= -9.15192258 -11.557844025 -21.650635095
pos2			= -3.34807742 -10.09279107 -21.650635095
pos3			= 5.058522725 8.07975174 21.650635095
pos4			= 7.441477275 13.570883355 21.650635095

p1			= 0.01061056 -0.04124137 0.007501
p2			= -0.01061056 0.04124137 0.007501
p3			= 0.039141425 -0.016774495 -0.007501
p4			= -0.039141425 0.016774495 -0.007501

# -------------------------------------------------------------------------------------------------
# Output parameters
# -------------------------------------------------------------------------------------------------
dt_save			= 1.0				# Output times

