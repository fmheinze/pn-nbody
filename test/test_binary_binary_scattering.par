# Test for a Newtonian binary-binary scattering

# -------------------------------------------------------------------------------------------------
# General parameters
# -------------------------------------------------------------------------------------------------
num_dim			= 3				# Number of dimensions
num_bodies 		= 4				# Number of bodies
0pn_terms		= 1				# Whether to include 0PN (Newtonian) terms
1pn_terms		= 0				# Whether to include 1PN terms
2pn_terms		= 0				# Whether to include 2PN terms
2.5pn_terms		= 0				# Whether to include 2.5PN terms


# -------------------------------------------------------------------------------------------------
# Time parameters
# -------------------------------------------------------------------------------------------------
t_end			= 5000.0			# Final time
dt			= 0.1				# Timestep


# -------------------------------------------------------------------------------------------------
# ODE integrator
# -------------------------------------------------------------------------------------------------
ode_integrator		= rk4				# ODE integration method


# -------------------------------------------------------------------------------------------------
# Initial conditions
# -------------------------------------------------------------------------------------------------
ic_preset 		= binary_binary_scattering	# Initial condition preset
mass1			= 0.5				# Mass of body 1
mass2			= 1.5				# Mass of body 2
mass3			= 1.0				# Mass of body 3
mass4			= 1.0				# Mass of body 4

binary1_a		= 30.0				# Semi-major axis of binary 1
binary1_b 		= 20.0				# Semi-minor axis of binary 1
binary1_phi0 		= 0.4				# Initial phase of binary 1
orientation1		= 1.2 -3.4 -2.1			# Orientation of binary 1

binary2_e		= 0.7				# Eccentricity of binary 2
binary2_rp 		= 20.0				# Pericenter distance of binary 2
binary2_phi0 		= 0.9				# Initial phase of binary 2

d0 			= 700.0				# Initial distance for the scattering
v0_rel			= 0.2				# Initial velocity for the scattering
b			= 60.0 				# Scattering impact parameter


# -------------------------------------------------------------------------------------------------
# Output parameters
# -------------------------------------------------------------------------------------------------
dt_save			= 1.0				# Output times

