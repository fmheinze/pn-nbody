# Test for a relativistic binary-single scattering with all terms up to 2.5 PN order

# -------------------------------------------------------------------------------------------------
# General parameters
# -------------------------------------------------------------------------------------------------
num_dim			= 3				# Number of dimensions
num_bodies 		= 3				# Number of bodies
0pn_terms		= 1				# Whether to include 0PN (Newtonian) terms
1pn_terms		= 1				# Whether to include 1PN terms
2pn_terms		= 1				# Whether to include 2PN terms
2.5pn_terms		= 1				# Whether to include 2.5PN terms


# -------------------------------------------------------------------------------------------------
# Time parameters
# -------------------------------------------------------------------------------------------------
t_end			= 1900.0			# Final time
dt			= 0.1				# Timestep


# -------------------------------------------------------------------------------------------------
# ODE integrator
# -------------------------------------------------------------------------------------------------
ode_integrator		= cash-karp			# ODE integration method
rtol	        	= 1e-16				# Error tolerance for the Cash-Karp method

# -------------------------------------------------------------------------------------------------
# Initial conditions
# -------------------------------------------------------------------------------------------------
ic_preset 		= binary_single_scattering_rel	# Initial condition preset
mass1			= 0.5				# Mass of body 1
mass2			= 0.5				# Mass of body 2
mass3			= 0.5				# Mass of body 3

d0 			= 150.0				# Initial distance for the scattering
p0_rel			= 0.05				# Initial momentum for the scattering
b			= 34.0				# Scattering impact parameter
orientation		= -0.2 -0.5 1.0			# Orientation of binary	
binary_r0		= 5.9859			# Initial radius of the binary
binary_pt0 		= 0.085168			# Initial tangential momentum of the binary
binary_pr0		= 0.000388			# Initial radial momentum of the binary
binary_phi0 		= 0.4				# Initial phase of binary


# -------------------------------------------------------------------------------------------------
# Output parameters
# -------------------------------------------------------------------------------------------------
dt_save			= 1.0				# Output times

